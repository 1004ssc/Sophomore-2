#include <stdio.h>
#include <Windows.h>

void main() {
	system("title 0103_01");

	printf("■키보드로 입력 받은 값이 양의 정수일 때만 출력하는 프로그램\n");
	printf("==================================================================\n");
	
	int num;

	printf("> 정수입력 : ");
	scanf("%d", &num);

	printf("------------------------------------------------------------------\n");
	if (num > 0)
		printf("키보드로 입력한 값 %d 는(은) 양의 정수입니다.\n", num);
	else
		printf("키보드로 입력한 값 %d 는(은) 음의 정수입니다.\n", num);
}
