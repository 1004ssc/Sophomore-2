#include <stdio.h>
#include <Windows.h>

void main() {
	system("title 0103_02");

	printf("■키보드로 입력받은 알파벳의 대/소문자 구별과 ASCII 코드값 출력\n");
	printf("==================================================================\n");

	int alph;

	printf("> 알파벳 입력 : a");
	scanf("%c", &alph);

	printf("------------------------------------------------------------------\n");
	if (alph >= 65 && alph <= 90)
		printf("%c는 알파벳 대문자이고 ASCII 코드값은 %d 입니다.\n", alph, alph);
	else if (alph >= 97 && alph <= 122)
		printf("%c는 알파벳 소문자이고 ASCII 코드값은 %d 입니다.\n", alph, alph);
	else
		printf("입력한 값은 알파벳이 아닙니다.\n");
}
