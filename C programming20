#include <stdio.h>
#include <stdlib.h>
#include <conio.h>

void main() {
	system("title 0116_f");

	int i = 2, j = 1, gugu[10][10] = { 0 };
	char ans;

	printf("■ 사용자가 입력한 숫자의 구구단을 2차원 배열로 출력하는 프로그램");

	do {
		printf("\n==========================================================================\n");
		printf("\n> 알고싶은 구구단의 숫자 입력 : ");
		scanf(" %d", &j);

		printf("--------------------------------------------------------------------------\n");

		if (j > 9 || j < 2) {
			printf("> 허용숫자는 2부터 9까지만 허용됩니다...\n");
			printf("> 숫자를 다시 입력하세요...\n");
			continue;
		}

		printf("---< %d의 단 출력 >------------------------------------------\n\n", j);
		
		for (i = 1; i < 10; i++) {

			gugu[i][j] = i*j;

			printf(" %5d X %d = %02d \n\n", i, j, gugu[i][j]);


		}

		
		printf(">> 구구단 중에서 %d의 단을 출력하였습니다!!!\n", j);

	re:
		printf("--------------------------------------------------------------------------\n");
		printf(">>> 프로그램을 다시 수행하겠습니까? (yes/no) : ");
		ans = getche();
		if (ans == 'y' || ans == 'y')
			continue;
		else if (ans == 'n' || ans == 'n')
			goto end;
		else {
			printf("\n> 알파벳은 대/소문자 구분없이 y와 n만 허용됩니다...\n");
			printf("> 알파벳을 다시 입력하세요...\n");
			goto re;
		}

	
	} while (1);
end:
	printf("\n--------------------------------------------------------------------------\n");
	printf(">>> 프로그램을 종료합니다...\n");
	printf("==========================================================================\n");
}
