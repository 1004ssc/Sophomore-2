#include <stdio.h>
void main() {
	int arr[5] = { 35, 27, 16, 98, 52 };
	int cnt, hap = 0;

	printf("■ <방법1>의 형태로 배열을 선언하여 for문으로 합을 구하는 프로그램\n");
	printf("==========================================================================\n");

	for (cnt = 0; cnt < 5; cnt++)
		hap += arr[cnt];
		printf("<문> arr[5] = {35, 27, 16, 98, 52}으로 배열을 선언\n");
	printf("--------------------------------------------------------------------------\n");
		printf("<답> 누적합 ..... [%d]\n", hap);
	printf("♣ 프로그램을 종료합니다... \n");
	printf("--------------------------------------------------------------------------\n");

}

#include <stdio.h>
void main() {
	int det[5], cnt;
	double sum = 0, avg = 0;

	printf("■ <방법1>의 형태로 배열을 선언하여 for문으로 합을 구하는 프로그램\n");
	printf("==========================================================================\n");

	for (cnt = 0; cnt <= 4; cnt++) {
		printf("%d번째 과목 : ", cnt+1);
		scanf("%d");
		sum += det[cnt];
	}
	avg = sum / 5;
	printf("--------------------------------------------------------------------------\n");
	printf("5과목 평균 ..... [ %.2f ] \n", avg);
	printf("--------------------------------------------------------------------------\n");

}

