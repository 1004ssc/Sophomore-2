성명 : 신승철
--*/

#include <stdio.h>
#include <Windows.h>
void student_3();
void gugudan();
void nuzuk();
void err();

void main() {
	system("title 0111_01");
	printf("제시되는 3개의 프로그램 중에서 선택하여 실행하는 프로그램\n");
	printf("=========================================================\n");
	printf("1. 3명의 학생에 대한 학교, 학번, 성명을 출력하는 프로그램\n");
	printf("2. 사용자가 입력한 숫자의 구구단을 출력하는 프로그램\n");
	printf("3. 사용자가 입력한 숫자까지의 누적합을 출력하는 프로그램\n");
	printf("--------------------------------------------------------\n");

	int menu;
	char ans;
	
	do {
		printf("수행할 프로그램을 선택하세요(1-3) : ");
		scanf(" %d", &menu);

		printf("--------------------------------------------------------\n");

		switch (menu) {
		case 1:
			student_3();
			break;
		case 2:
			gugudan();
			break;
		case 3:
			nuzuk();
			break;
		default:
			err();
			continue;
		}

		printf("--------------------------------------------------------\n");
		printf("> 프로그램을 성공적으로 수행하였습니다 !!!\n");
		printf("--------------------------------------------------------\n");
	
	again:
		printf("=========================================================\n");
		printf("♣프로그램을 다시 실행하시겠습니까? (Y/N) : \n");
		getchar();
		scanf("%c", &ans);
		printf("=========================================================\n");

		if (ans == 'n' || ans == 'N') {
			printf("-x-x-x- 총 %d회 실행한 프로그램을 종료합니다. -x-x-x-\n");
			printf("=========================================================\n");
			break;
		}

		else if (ans == 'Y' || ans == 'y') {
			continue;
		}

		else {
			printf("??? 허용되는 알파벳은 대/소문자 구별없이 Y 또는 N만 허용됩니다.\n");
			printf("프로그램을 다시 실행하십시오.\n");
		}
		goto again;

	} while (1);
}

void student_3() {
	printf("1. 3명의 학생 신상명세를 do~while문으로 출력하는 프로그램\n");
	printf("=========================================================\n");

	printf(">> 학생 신상명세를 입력하세요...\n\n");

	int stu = 1;
	char sch[20], num[10], name[12], gender[4], phone[20], mail[20];
	do {
			printf("--< 학생 %d 의 신상명세 입력>-----------------------------\n", stu);
			printf("1. 학교명 : ");
			scanf(" %s", &sch);
			printf("2. 학번 : ");
			scanf(" %s", &num);
			printf("3. 성명 : ");
			scanf(" %s", &name);
			printf("4. 성별 : ");
			scanf(" %s", &gender);
			printf("5. 전화번호(예시> 010-0000-0000) : ");
			scanf(" %s", &phone);
			printf("6. 이메일 : ");
			scanf(" %s", &mail);
			printf("\n");

			printf("--< 학생 %d 의 신상명세 출력>-----------------------------\n", stu);
			printf("1. 학교명 : %s\n", sch);
			printf("2. 학번 : %s\n", num);
			printf("3. 성명 : %s\n", name);
			printf("4. 성별 : %s\n", gender);
			printf("5. 전화번호(예시> 010-0000-0000) : %s\n", phone);
			printf("6. 이메일 : %s\n", mail);
			printf("\n");
			
			stu++;
		}
		while (stu < 4);
}

void gugudan() {
	int dan, cnt, i, gop = 0;
	printf("2. 중첩 for문으로 사용자가 입력한 구구단(2-99)을 출력하는 프로그램\n");
	printf("=========================================================================\n");

re:
	printf("> 출력할 단을 숫자로만 입력하세요: ");
	scanf("%d", &dan);
	if (dan >= 2 && dan <= 99) {
		for (cnt = 2; cnt <= dan; cnt++) {
			printf("\n--< %d의 단 >--------------------------------------------------------\n", dan);
			for (i = 1; i <= 9; i++)
				printf("  %d x %d = %05d ... 바깥쪽 for문 ( %d )일 때, 안쪽 for문 ( %d )\n", cnt, i, cnt * i, cnt, i);
		}
	}
	else {
		printf("--------------------------------------------------------\n");
		printf("입력한 숫자가 2-99의 범위가 아닙니다. 다시 입력하십시오.\n");
		printf("--------------------------------------------------------\n");
		goto re;
	}
}

void nuzuk() {
	int num, cnt, hap = 0;

	printf("3. 1부터 입력한 수까지 누적되는 합을 구하는 프로그램\n");
	printf("=========================================================\n");
	
re:

	printf("> 어디까지의 합을 구할까요? : ");
	scanf("%d", &num);
	printf("--------------------------------------------------------\n");
	if (num >= 1) {
		cnt = 1;
		while (cnt <= num) {
			hap += cnt;
			cnt++;
		}
		printf("> 1부터 %d까지 누적되는 합 ... sum = ( %d )\n", num, hap);
	}
	else {
		printf("--------------------------------------------------------\n");
		printf("입력한 숫자가 음수입니다. 다시 입력하십시오.\n");
		printf("--------------------------------------------------------\n");
		goto re;
	}
}

void err() {
	printf(">> 선택의 범위가 아닙니다...\n");
	printf(">> 번호를 다시 선택하세요.\n");
	printf(">> 허용되는 숫자는 1, 2, 3 입니다.\n");
	printf("--------------------------------------------------------\n");
}
