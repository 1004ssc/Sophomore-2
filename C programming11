성명 : 신승철
--*/

#include <stdio.h>
#include <Windows.h>

void main() {
	system("title 0104_01");
	printf("■본인의 체질량지수(BMI)를 구하는 프로그램\n");
	
	printf("=================================================\n");
	
	printf("> BMI = 체중(kg) / 키(m)의 제곱\n");

	printf("-------------------------------------------------\n");

	char name[12];
	float cm, kg, m, BMI;

	printf("본인 이름 ---->");
	scanf("%s", &name);

	printf("키 입력(cm) (소수점 첫쨰 자리까지 입력) ---->");
	scanf("%f", &cm);

	printf("체중 입력(kg) (소수점 첫쨰 자리까지 입력) ---->");
	scanf("%f", &kg);

	printf("-------------------------------------------------\n");

	m = cm / 100;
	BMI = kg / m / m;

	printf("본인의 BMI를 출력합니다 : %.2f\n", BMI);

	printf("-------------------------------------------------\n");

	printf("구분 \t\t 출력결과 \n");

	printf("-------------------------------------------------\n");

	printf("성명 \t\t %s \n", name);
	printf("키(cm) \t\t %.1fcm \n", cm);
	printf("체중(kg) \t %.1fkg \n", kg);
	printf("BMI \t\t %.2f \n", BMI);


	printf("-------------------------------------------------\n");

	printf(">>>> 한국 기준 BMI <<<<\n");
	printf("> 저체중 \t 18.5 미만\n");
	printf("> 정상 \t\t 18.5 - 22.9\n");
	printf("> 과체중 \t 23.0 - 24.9\n");
	printf("> 비만 \t\t 25.0 이상\n");

	printf("-------------------------------------------------\n");

	if (BMI >= 25) {
		printf(">> 판정 : [비만]\n");
		printf(">> 처방 : 심각한 다이어트가 필요합니다.\n");
	}
	else if (BMI >= 23 && BMI < 25) {
		printf(">> 판정 : [과체중]\n");
		printf(">> 처방 : 건강을 위해 운동을 권합니다.\n");
	}
	else if (BMI >= 18.5 && BMI < 23) {
		printf(">> 판정 : [정상]\n");
		printf(">> 처방 : 현상태 유지관리가 중요합니다.\n");
	}
	else {
		printf(">> 판정 : [저체중]\n");
		printf(">> 처방 : 체력 보강이 필요합니다.\n");
	}

	printf("-------------------------------------------------\n");

	printf(">>> 프로그램을 종료합니다.\n");

	printf("=================================================\n");
}
